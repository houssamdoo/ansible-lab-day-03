global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels: {}

rule_files:
  - blackbox_rules.yml
  - vm_rules.yml

scrape_configs:
  - job_name: "prometheus"
    #basic_auth:
    #  username: "admin"
    #  password: "Azerty123.123$"
    dns_sd_configs:
      - names:
          - "tasks.prometheus"
        type: "A"
        port: 9090
    metrics_path: "/metrics"

  - job_name: "blackbox_exporter"
    scrape_interval: 5s
    static_configs:
      - targets:
          - tasks.blackbox:9115
        labels:
          group: "production"

  - job_name: "blackbox"
    metrics_path: /probe
    params:
      module: [http_2xx]
    static_configs:
      - targets:
          - https://mydomain.com
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: tasks.blackbox:9115

alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - tasks.alertmanager:9093
